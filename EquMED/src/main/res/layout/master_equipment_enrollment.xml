<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_dummy"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/lLayout_eq_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/txtVw_eq_Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Equipment Name *"
                    android:textColor="#000000"/>


                <EditText
                    android:id="@+id/eTxt_eq_Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:hint="Equipment Name"
                    android:imeOptions="actionDone"
                    android:inputType="text|textNoSuggestions"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lLayout_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_eq_Name"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtVw_active"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Active"
                    android:textColor="#000000"/>

                <Switch
                    android:id="@+id/switch_equ_active"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.815"
                    android:checked="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/txtVw_activeYesNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.815"
                    android:text="Yes"
                    android:textColor="#000000"
                    android:visibility="invisible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_isstandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_eq_Name"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtVw_isstandard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Standard"
                    android:textColor="#000000"/>

                <Switch
                    android:id="@+id/switch_equ_isstandard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.815"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:checked="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/txtVw_isstandardYesNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.815"
                    android:text="Yes"
                    android:textColor="#000000"
                    android:visibility="invisible"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lLayout_insImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_EqImage"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_EqImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.60"
                    android:text="Equipment Image"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imgVw_EqImg"
                    android:layout_width="0dp"
                    android:layout_height="120dip"
                    android:layout_weight="1.8"
                    android:background="@drawable/rect_edittext"
                    android:scaleType="fitXY"
                    android:src="@drawable/medical_equiment" />
            </LinearLayout>

            <LinearLayout android:id="@+id/layout_listDetails"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#505050"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/txtVw_view_eqStatus_serialNo1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="S.No"
                        android:textColor="#ffffff"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/txtVw_DeviceName1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="Device Name"
                        android:textColor="#ffffff"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtVw_eqStatus1"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:paddingLeft="4dip"
                        android:text="Status"

                        android:textColor="#ffffff"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="0dip" android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingLeft="4dip"
                        android:id="@+id/update_equip1"
                        android:text="Update"

                        android:textColor="#ffffff"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="gone"/>


                </LinearLayout>
                <ListView
                    android:id="@+id/list_Mst_Equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout android:id="@+id/layout_dummy"
                      android:layout_width="match_parent"
                      android:layout_height="65dp"
                      android:layout_alignParentBottom="true"
                      android:background="#00ffffff"
                      android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtVw_noEqpmntFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="No equipment details found"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <!--    <RelativeLayout
            android:id="@+id/rLayout_bottomButton_insDetails"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_equipMstCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/back"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_equipMstSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/save"/>

        </RelativeLayout>-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fab_equipMstSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/save"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fab_equipMstAddNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/plus79"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fab_equipMstDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/delete"
        android:visibility="gone"/>


</android.support.design.widget.CoordinatorLayout>

