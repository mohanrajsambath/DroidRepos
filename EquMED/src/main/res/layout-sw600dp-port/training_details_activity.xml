<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtVw_noTrainingDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="No training details found"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/sv_detail_trng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_fab_trng_new"
        android:layout_marginBottom="10dip"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lLayout_trngDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/lLayout_trng_hsptlName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_trng_eqpmntName"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_hsptlName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Hospital / Location"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/eTxt_trng_hsptlName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:editable="false"
                    android:ems="5"
                    android:focusableInTouchMode="false"
                    android:hint="Hospital Name"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip"
                    tools:ignore="Deprecated">

                </EditText>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lLayout_trng_eqpmntName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_hosptDetails"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_eqpmntName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Equipment Name"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/eTxt_trng_eqipName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:editable="false"
                    android:ems="5"
                    android:focusableInTouchMode="false"
                    android:hint="Equipment Name"
                    android:imeOptions="actionNext"
                    android:inputType="text|textNoSuggestions"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip"
                    tools:ignore="Deprecated">

                </EditText>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lLayout_trng_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Training Date "
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/eTxt_trng_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:focusableInTouchMode="false"
                    android:hint="Training Date"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip">

                </EditText>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lLayout_trng_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_label_trng_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Duration (In hours)"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/eTxt_trng_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:hint="Training  Duration"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip">

                </EditText>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lLayout_trng_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Training Description"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/eTxt_trng_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:hint="Training Description"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_trng_prvdBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_prvdBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Training Provided By "
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/eTxt_trng_prvdBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:hint="Provided By"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_trng_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_trng_prvdBy"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtVw_trng_invoice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Invoice"
                    android:textColor="#000000" />

                <Switch
                    android:id="@+id/switch_trng_invoice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.815"
                    android:checked="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textOff="No"
                    android:textOn="Yes" />

                <TextView
                    android:id="@+id/txtVw_trng_YesNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.815"
                    android:text="Yes"
                    android:textColor="#000000"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_trng_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_trng_invoice"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_img"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Image"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_trng_uploadImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:text="Upload Image" />


            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/hori_sv_trng_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/lLayout_trng_image"
                android:background="#00ffffff"
                android:fillViewport="false"
                android:foregroundGravity="left"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/lLayout_trng_selected_photos_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:animateLayoutChanges="true"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <!-- images will be added dynamicall to this layout -->
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/lLayout_trng_attachDocs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hori_sv_trng_image"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtVw_trng_attach_docs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Attach Documents"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_trng_attach_docs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:text="Attach Document" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_trng_attachDocs_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ListView
                    android:id="@+id/lv_trng_attachDocs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_trng_createdBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtVw_trng_createdBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Created By "
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/eTxt_trng_createdBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip"></EditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_trng_createdOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtVw_trng_createdOn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Created Date "
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/eTxt_trng_createdOn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.63"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/rect_edittext"
                    android:ems="5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textSize="15dip"></EditText>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/rlayout_trainingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llayout_trng_eqmnt_hsptl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/lLayout_trngDetails_hsptl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lLayout_wrrntyDetails_eqpmnt_name"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtVw_trngDetails_label_hsptl_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Hospital Name / Location"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtVw_trngDetails_label_colon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtVw_trngDetails_hsptl_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000000" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_wrrntyDetails_eqpmnt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtVw_trngDetails_label_eqpmnt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:text="Equipment Name"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtVw_wwDetails_label_colon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text=":"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtVw_trngDetails_eqpmnt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.37"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#000000" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayout_trng_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_dummy_trng"
            android:layout_below="@+id/llayout_trng_eqmnt_hsptl_name"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#505050"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtVw_trng_serialNo"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="S.No"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtVw_trng_date_label"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="Training Date"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtVw_trng_duration"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dip"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="Provided By"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtVw_trng_update"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:paddingRight="2dip"
                        android:text="Update"
                        android:textColor="#ffffff" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#c8c8c8"
                        android:visibility="invisible" />


                </LinearLayout>

                <ListView
                    android:id="@+id/lv_trng_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_dummy_trng"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="#00ffffff"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>


