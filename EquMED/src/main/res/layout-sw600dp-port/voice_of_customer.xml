<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_dummy"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/voc_hos_eq_name"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/lLayout_hosp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtVw_hosp_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.37"
                        android:text="Hospital / Location "
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/txtVw_hosp_name_val"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.63"
                        android:background="@drawable/rect_edittext"
                        android:ems="5"
                        android:imeOptions="actionDone"
                        android:inputType="text|textNoSuggestions"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="15dip"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lLayout_Equip_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txtVw_Equip_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.37"
                        android:text="Equipment Name "
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/txtVw_Equip_name_val"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.63"
                        android:background="@drawable/rect_edittext"
                        android:ems="5"
                        android:imeOptions="actionDone"
                        android:inputType="text|textNoSuggestions"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:textSize="15dip"/>

                </LinearLayout>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/consumables_add_edit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/lLayout_voice_of_customer_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtVw_voice_of_customer_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.37"
                            android:text="Type *"
                            android:textColor="#000000" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1.7">

                            <com.rey.material.widget.Spinner
                                android:id="@+id/spn_voice_of_customer_type"
                                style="@style/LightSpinner"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.63"
                                android:ems="5"
                                android:hint="Type"
                                android:textSize="15dip"
                                app:spn_label="Select Customer Type">
                            </com.rey.material.widget.Spinner>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lLayout_voice_of_customer_brief"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtVw_voice_of_customer_brief"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.37"
                            android:text="In Brief "
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/eTxt_voice_of_customer_brief"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1.63"
                            android:background="@drawable/rect_edittext"
                            android:ems="5"
                            android:imeOptions="actionDone"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:textSize="15dip"></EditText>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_dummy"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="#00ffffff"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fab_vocMstSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/save"
        android:visibility="visible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fab_VocClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/clear"
        android:visibility="visible"/>

</android.support.design.widget.CoordinatorLayout>

