<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rLayout_dashboardModuleHeader"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@+id/appBarLayout"
        android:background="#A5D6A7">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            >


            <ImageView
                android:id="@+id/imgVw_lout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txt_adminTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Welcome Administrator"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/imgVw_lout"
                android:textSize="16sp"/>


        </RelativeLayout>


    </RelativeLayout>


    <!--<android.support.v7.widget.CardView
        android:id="@+id/rLayout_avatar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/rLayout_dashboardbuttons"
        android:layout_below="@+id/rLayout_dashboardModuleHeader"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="20dip"
        android:orientation="horizontal">



    </android.support.v7.widget.CardView>-->
    <RelativeLayout
        android:id="@+id/rLayout_dashboard_profile_avatar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_above="@+id/rLayout_dashboardbuttons"
        android:layout_below="@+id/rLayout_dashboardModuleHeader"
        >

        <ImageView
            android:id="@+id/imgVw_profile_avatar"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:minHeight="150dp"
            android:padding="20dp"
            android:src="@drawable/equmed" />

        </RelativeLayout>





    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_dashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/rLayout_dashboardbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rLayout_footer">


        <LinearLayout
            android:id="@+id/dashobrdbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btn_Master"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorDashButton_900"
                android:drawableRight="@drawable/right_arroww"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Hospital / Equipment"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_userCreation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorDashButton_800"
                android:drawableRight="@drawable/right_arroww"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="User Creation"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_medicalEnroll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorDashButton_700"
                android:drawableRight="@drawable/right_arroww"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:visibility="gone"
                android:text="Add Medical Equipment"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btn_viewMedical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorDashButton_700"
                android:drawableRight="@drawable/right_arroww"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Medical Equipment"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#fff" />


        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rLayout_footer"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDashButton_900">

        <ImageView
            android:id="@+id/imageViewmov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="4dip"
            android:src="@drawable/moveo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:padding="4dip"
            android:src="@drawable/power" />


    </RelativeLayout>
</RelativeLayout>